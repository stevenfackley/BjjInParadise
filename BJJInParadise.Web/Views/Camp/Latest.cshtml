@model BjjInParadise.Core.Models.Camp

@section styles{
    <style>
        #mainNav {
            background: #000 !important;
        }

        #latestContainer {
            margin-top: 160px;
        }
    </style>
}
    <div class="container" id="latestContainer">
        @if (Model != null)
        {
            @Html.Raw(Model.HtmlPageText)
        }





        @using Microsoft.AspNet.Identity
        @if (Request.IsAuthenticated)
        {
            <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
                <input type="hidden" name="cmd" value="_s-xclick">
                <input type="hidden" name="hosted_button_id" value="4985MPWLPF2US">
                <table>
                    <tr><td><input type="hidden" name="on0" value="Room Options">Room Options</td></tr><tr><td><select name="os0">
                        <option value="Triple room with 3 beds and private bathroom">Triple room with 3 beds and private bathroom $850.00 USD</option>
                        <option value="Double room with 2 beds and private bathroom">Double room with 2 beds and private bathroom $950.00 USD</option>
                        <option value="Deluxe Private room with King Bed and private bathroom">Deluxe Private room with King Bed and private bathroom $1,250.00 USD</option>
                        <option value="Non training spouse or family member">Non training spouse or family member $450.00 USD</option>
                    </select> </td></tr>
                </table>
                <input type="hidden" name="currency_code" value="USD">
                <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_paynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
            </form>

        }
        else
        {
            <h2>Login to Reserve Your Spot!</h2>
          @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" , @class="btn btn-default"})
              @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn" })
        
        }
    </div>